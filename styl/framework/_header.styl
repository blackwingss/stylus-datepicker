.tqb-date-picker
  +prefix-classes('tqb-dp-')
    .header
      h3
        text-align center
        font-size 1.2em
        font-weight normal
        margin 0
        line-height header-height - 1px
      button
        position absolute
        top 0
        background-color white
        border none
        background none
        color gray
        padding 0
        height header-height - 1px
        line-height header-height - 1px
        &.close-button
          left 0
        &.confirm-button
          right 0
          font-size 1rem
