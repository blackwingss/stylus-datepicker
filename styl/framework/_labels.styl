.tqb-date-picker
  +prefix-classes('tqb-dp-')
    .labels
      border-top 1px solid silver
      background-color gray-background
      padding-left 0
      margin 0
      display flex
      li
        color rgb(148,148,148)
        list-style none
        flex 1
        text-align center
        font-size .8rem
        line-height labels-height
        &.sunday,
        &.staturday
          color red
